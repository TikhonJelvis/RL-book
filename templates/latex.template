    %% modification begin
    \ifx\FV@Line\@empty
      \global\@FV@emptylinetrue
    \else
      \global\@FV@emptylinefalse
    \fi
    %% modification end
    \def\next{\FV@PreProcessLine\FV@GetLine}%
  \fi%
  \next}%
